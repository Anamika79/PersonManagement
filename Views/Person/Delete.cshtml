@model PersonManagement.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Delete" asp-route-id="@Model.Id">
    <h4>Are you sure you want to delete this employee?</h4>
    <div class="mb-3">
        <label class="form-label">First Name: </label>
        <input type="text" class="form-control" asp-for="FirstName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name: </label>
        <input type="text" class="form-control" asp-for="LastName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Date of Birth: </label>
        <input type="text" class="form-control" asp-for="DOB" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Address: </label>
        <input type="text" class="form-control" asp-for="Address" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Email: </label>
        <input type="text" class="form-control" asp-for="Email" readonly />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
